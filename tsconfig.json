{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "es6",
		"allowJs": true,
		"experimentalDecorators": true,
		"moduleResolution": "node"
	},
	"include": ["src/**/*.ts"]
}
